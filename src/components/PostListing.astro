---
const { post } = Astro.props;
import { slugify, slugifyFilename, formatDate } from "$scripts/utils.js";

const { title, description, draft, date_published } = post.frontmatter;
---

<div class="post-detail">
  <a href={`${slugifyFilename(post.file, "/posts/")}`}>
    {title}
    <div class="post-description">
      {`${formatDate(date_published)}`}
      {description}
    </div>
  </a>
</div>

<style>
  a {
    text-decoration: none;
  }

  div.post-description {
    font-size: 0.9rem;
    margin-inline-start: 1rem;
    margin-block-end: 0.5rem;
  }
</style>
